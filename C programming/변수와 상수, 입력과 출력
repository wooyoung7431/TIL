	return 0;*/
	
	//상수에 대한 예제
	/*const int year = 2000;
	printf("태어난 년도:%d\n", year);
	year=2001;*/

	//printf
	//연산
	/*int add = 3 + 7;
	printf("3+7=%d\n", add);
	printf("%d+%d=%d\n", 3, 7, 3+7);
	printf("%d*%d=%d", 30, 70, 30 * 70);*/

	//scanf
	//키보드 입력을 받아서 저장
	/*int input;
	printf("입력값:%d\n", input);
	printf("값을 입력하세요:");
	scanf_s("%d", &input);*/

	/*int one, two, three;
	printf("3개의 정수를 입력하세요:");
