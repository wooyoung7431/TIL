	float weight;
	printf("몸무게는 몇 kg 이에요?");
	scanf_s("%f", &weight);

	double height;
	printf("키는 몇 cm에요?");
	scanf_s("%lf", &height);

	char  what[256];
	printf("무슨 범죄를 저질렀어요?");
	scanf_s("%s", what, sizeof(what));

	//조서 내용 출력
	printf("\n\n---범죄자 정보 --- \n\n");
	printf("이름 :%s", name);
	printf("나이 :%d", age);
	printf("몸무게 :%.1lf", weight);
	printf("키 :%.1f", height);
	printf("범죄명: :%s\n", what);


	return 0;



}
